{
	"name": "crm-praja",
	"version": "1.0.0",
	"description": "O CRM PRAJA é uma solução de gestão de clientes desenvolvida especialmente para empresas de construção civil que buscam otimizar o relacionamento e o acompanhamento de seus clientes.",
	"main": "index.js",
	"scripts": {
		"test": "pnpm run services:up && pnpm run wait-for-postgres && conc -n next,jest -k -s command-jest 'next dev' 'jest --runInBand --verbose'",
		"test:watch": "conc -n next,jest --hide next -k -s command-jest 'next dev' 'jest --runInBand --verbose --watchAll'",
		"dev": "pnpm run services:up && pnpm run wait-for-postgres && next dev",
		"check": "pnpm lint:prettier:check && pnpm lint:eslint:check && pnpm run test && pnpm next build",
		"lint:prettier:check": "npx prettier --check .",
		"lint:prettier:fix": "npx prettier --write .",
		"lint:eslint:check": "next lint --dir .",
		"prepare": "husky",
		"commit": "cz",
		"services:up": "docker compose -f infra/compose.yaml up -d",
		"services:down": "docker compose -f infra/compose.yaml down",
		"wait-for-postgres": "tsx infra/scripts/wait-for-postgres.ts && pnpm run prisma:db:push",
		"prisma:dev": "dotenv -e .env.development -- npx prisma generate --schema infra/prisma/schema.prisma",
		"prisma:migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev --schema infra/prisma/schema.prisma",
		"prisma:migrate": "dotenv -e .env -- npx prisma migrate dev --schema infra/prisma/schema.prisma",
		"prisma:db:push": "dotenv -e .env.development -- npx prisma db push --schema infra/prisma/schema.prisma",
		"prisma": "npx prisma generate --schema infra/prisma/schema.prisma",
		"prisma:studio": "dotenv -e .env.development -- npx prisma studio --schema infra/prisma/schema.prisma"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@emotion/react": "^11.13.5",
		"@emotion/styled": "^11.13.5",
		"@hookform/resolvers": "^3.9.1",
		"@mui/icons-material": "^6.1.10",
		"@mui/material": "^6.1.10",
		"@mui/x-date-pickers": "^7.23.2",
		"@prisma/client": "^5.22.0",
		"async-retry": "^1.3.3",
		"bcrypt": "^5.1.1",
		"concurrently": "^9.1.0",
		"date-fns": "^4.1.0",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^11.0.6",
		"jose": "^5.9.6",
		"next": "^15.0.3",
		"prisma": "^5.22.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.54.1",
		"sweetalert2": "^11.15.2",
		"swr": "^2.2.5",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@faker-js/faker": "^9.2.0",
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.14",
		"@types/node": "22.9.0",
		"@types/react": "18.3.12",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv-cli": "^7.4.2",
		"eslint": "8.57.1",
		"eslint-config-next": "15.0.3",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "^28.9.0",
		"husky": "^9.1.6",
		"jest": "^29.7.0",
		"jest-mock-extended": "^4.0.0-beta1",
		"prettier": "^3.3.3",
		"sass": "^1.82.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.2",
		"typescript": "5.6.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
